<div class="box-login">
  <div class="card-login">

    <div class="container p-0">
      <div class="row">
        <div class="col p-0">
          <nav aria-label="breadcrumb" class="m-3">
            <ol class="breadcrumb">
              <li><%= link_to "Home", root_path, class: "text-light" %></li>
              <li class="breadcrumb-item text-light active" aria-current="page"></li>
              <li class="breadcrumb-item text-light active" aria-current="page">
                User Profile
              </li>
            </ol>
          </nav>
        </div>
      </div>

      <div class="p-0">

        <div class="col-lg-12">
          <div class="card-bg p-3">
            <div class="row">
               <div class="card-bg text-center p-2">
                <% if current_user.photo.attached? %>
                  <%= image_tag current_user.photo, class: "avatar-edit m-2", crop: :fill %>
                <% else %>
                  <%= image_tag("/assets/default_profile.jpg", class: "avatar-edit m-2") %>
                <% end %>
              </div>
            </div>

            <hr class="text-light m-2">

            <div class="row">
              <p class="text-light my-0 mx-2 py-2">Full name: <%= current_user.full_name %></p>
            </div>

            <hr class="text-light m-2">

            <div class="row">
              <p class="text-light my-0 mx-2 py-2">Email: <%= current_user.email %></p>
            </div>

            <hr class="text-light m-2">

            <div class="row">
              <p class="text-light my-0 mx-2 py-2">Role:
                <% if current_user.role? %>
                  <%= "Administrator" %>
                <% else %>
                  <%= "User" %>
                <% end %>
              </p>
            </div>

          </div>
        </div>

      </div>

      <div class="d-grid gap-4 col-12 mt-1">
        <%= link_to "Edit Profile", edit_user_registration_path, class: 'btn bg-primary text-white py-3 px-5' %>
        <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "btn bg-primary text-white py-3 px-5" %>
      </div>

    </div>

  </div>
</div>
